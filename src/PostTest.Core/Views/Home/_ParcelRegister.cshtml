@model PostTest.Core.Models.ParcelRegisterViewModel

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form asp-controller="Home" asp-action="ParcelRegister" data-ajax="true" data-ajax-method="POST"  class="form-horizontal" role="form" id="formRegister" data-ajax-mode="replace" data-ajax-update="#searchresults">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="dl-horizontal">
        <dt><label asp-for="Weight"></label></dt>
        <dd>
            <input type="text" asp-for="Weight" />
            <span asp-validation-for="Weight"></span>
        </dd>
        <dt><label asp-for="Inventory"></label></dt>
        <dd>
            <input type="text" asp-for="Inventory" />
            <span asp-validation-for="Inventory"></span>
        </dd>
        <dt><label asp-for="Recipient.LastName"></label></dt>
        <dd>
            <input type="text" asp-for="Recipient.LastName" />
            <span asp-validation-for="Recipient.LastName"></span>
        </dd>
        <dt><label asp-for="Recipient.FirstName"></label></dt>
        <dd>
            <input type="text" asp-for="Recipient.FirstName" />
            <span asp-validation-for="Recipient.FirstName"></span>
        </dd>
        <dt><label asp-for="Recipient.Patronymic"></label></dt>
        <dd>
            <input type="text" asp-for="Recipient.Patronymic" />
            <span asp-validation-for="Recipient.Patronymic"></span>
        </dd>
        <dt><label asp-for="Recipient.Address"></label></dt>
        <dd>
            <input type="text" asp-for="Recipient.Address" />
            <span asp-validation-for="Recipient.Address"></span>
        </dd>
        <dt><label asp-for="Sender.LastName"></label></dt>
        <dd>
            <input type="text" asp-for="Sender.LastName" />
            <span asp-validation-for="Sender.LastName"></span>
        </dd>
        <dt><label asp-for="Sender.FirstName"></label></dt>
        <dd>
            <input type="text" asp-for="Sender.FirstName" />
            <span asp-validation-for="Sender.FirstName"></span>
        </dd>
        <dt><label asp-for="Sender.Patronymic"></label></dt>
        <dd>
            <input type="text" asp-for="Sender.Patronymic" />
            <span asp-validation-for="Sender.Patronymic"></span>
        </dd>
        <dt><label asp-for="Sender.Address"></label></dt>
        <dd>
            <input type="text" asp-for="Sender.Address" />
            <span asp-validation-for="Sender.Address"></span>
        </dd>
    </dl>
    <input type="submit" class="btn btn-primary" id="buttonRegister" value="Зарегистрировать"/>
    <button type="button" class="btn btn-default" data-dismiss="modal" id="buttonCancel">Отменить</button>
</form>